FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          0.1;
        smoother        GaussSeidel;
    }

    U
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         2;
        tolerance       1e-08;
        relTol          0.1;
    }
    
    Phi
    {
        solver  smoothSolver;
        smoother    GaussSeidel;
        nSweeps 2;
        tolerance   1e-08;
        relTol  0.1;
    }
}

potentialFlow
{
    nNonOrthogonalCorrectors 3;
}

SIMPLE
{
    nNonOrthogonalCorrectors 10;

    residualControl
    {
        p               1e-3;
        U               1e-3;
    }
}

relaxationFactors
{
    fields
    {
        p               0.05;
    }
    equations
    {
        U               0.2;
    }
}


